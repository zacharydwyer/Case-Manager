<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.zakdwyer.casemanager"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_person"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Case List Activity [MAIN ACTIVITY] -->
        <activity
            android:name=".ui.CaseList.CaseListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.CaseAdd.CaseAddActivity"/>
        <activity
            android:name=".ui.CaseInfo.CaseInfoActivity"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity android:name=".ui.TodoList.TodoListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.TodoListAdd.TodoListAddActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.CaseContactList.CaseContactListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.EditCaseContact.EditCaseContactActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ui.AddCaseContact.AddCaseContactActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>
